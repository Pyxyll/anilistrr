<style>
  .show-hero { background-image: linear-gradient(360deg, rgba(19,27,56,0.9) 41%,
  rgba(19,27,56,0.6) 100%), url(
  {{show.heropath}}); width: 100%; height: 500px; background-repeat: no-repeat;
  background-size: cover; margin-top: -20px;}
</style>

    <section>
      {{> menu}}
    </section> 

<section class="show-hero">
  <div class="hero-wrapper">

    <div class="container">
      <div class="poster">
        <img
          class="details-poster"
          src="{{show.imgpath}}"
          alt="{{show.english_title}} poster"
        />
      </div>
      <div class="info">
        <h1>{{show.english_title}}</h1>
        <p>Romanji: {{show.romaji_title}}</p>
        {{#each show.genre}}
          <div class="ui label">{{this}}</div>
        {{/each}}
        <p class="show-details">
          Studio: {{show.animation_studio}}
        </p>
        <p class="show-details">{{show.description}}</p>

      </div>
    </div>

  </div>

</section>

<section class="ui container utility-margin-top">
  <section class="ui segment foreground">
    <h1>
      Details
    </h1>
    
       <div class="ui five statistics" style="margin-top: 1em;">
    
    <div class="statistic">
      <div class="value">
<i class="heart icon"></i>
      </div>
      <div class="label">
        Premiere: <br>
        {{show.air_year}}
      </div>
    </div>
    
     <div class="statistic">
      <div class="value">
        <i class="info circle icon"></i>
      </div>
      <div class="label">
        Status: <br>
        {{show.air_Status}}
      </div>
    </div>    
    <div class="statistic">
      <div class="value">
<i class="images icon"></i>
      </div>
      <div class="label">
        Seasons: <br>
        {{show.seasons}}
      </div>
    </div>    
    <div class="statistic">
      <div class="value">
        <i class="play circle icon"></i>
      </div>
      <div class="label">
        Episodes: <br>
        {{show.episode_count}}
      </div>
    </div> 
    <div class="statistic">
      <div class="value">
       <i class="wifi icon"></i>
      </div>
      <div class="label">
        Available on: <br>
        {{show.streaming_platform}}
      </div>
    </div> 
   
  </div>

    <div class="f-carousel" id="myCarousel">
      {{#each show.comments}}
        <div class="f-carousel__slide shadow">
          <div class="comment-wrapper">
            <img
              class="ui mini circular image shadow"
              src="https://picsum.photos/100"
            />
            <h3>{{this.name}}</h3>
            <p>{{this.comment}}</p>
            <div
              class="ui rating"
              data-rating="{{this.rating}}"
              data-max-rating="5"
            ></div>
          </div>
        </div>

      {{/each}}
    </div>
  </section>
</section>