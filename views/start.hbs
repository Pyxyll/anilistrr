<section class="ui center aligned middle aligned segment foreground">
  <h2>Welcome to the Playlist App!</h2>
    <p>
      This app will allow users to create and maintain a collection of playlists.
    </p>
  
  <img src="https://cdn.glitch.global/4f860bd6-a92d-440c-aca3-407e6dc0a89a/wave.jpg?v=1706707299999">
  
   <div class="ui five statistics" style="margin-top: 1em;">
    
    <div class="statistic">
      <div class="value">
        <i class="music icon"></i> 
      </div>
      <div class="label">
        App Title: <br>
        {{info.appTitle}}
      </div>
    </div>
    
     <div class="statistic">
      <div class="value">
        <i class="code branch icon"></i> 
      </div>
      <div class="label">
        App Version: <br>
        Version {{info.version}}
      </div>
    </div>    
    <div class="statistic">
      <div class="value">
        <i class="map pin icon"></i> 
      </div>
      <div class="label">
        Made in: <br>
        {{info.location}}
      </div>
    </div>    
    <div class="statistic">
      <div class="value">
        <i class="user icon"></i> 
      </div>
      <div class="label">
        Created by: <br>
        {{info.creators.0.name}}
      </div>
    </div> 
    <div class="statistic">
      <div class="value">
        <i class="user plus icon"></i> 
      </div>
      <div class="label">
        With help from: <br>
        {{info.creators.1.name}}
      </div>
    </div> 
   
  </div>
</section>